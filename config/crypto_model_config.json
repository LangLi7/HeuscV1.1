{
  "model_info": {
    "model_name": "Heusc_BTC",
    "version": 0.01,
    "created_date": "20251017_143400",
    "description": "LSTM-CNN f\u00fcr Bitcoin 1min Candlestick Vorhersage"
  },
  "data_source": {
    "type": "binance",
    "symbol": "BTCUSDT",
    "interval": "1m",
    "features": [
      "open",
      "high",
      "low",
      "close",
      "volume"
    ]
  },
  "model_architecture": {
    "cnn_layers": [
      {
        "type": "Conv1D",
        "filters": 64,
        "kernel_size": 3,
        "activation": "relu"
      },
      {
        "type": "Conv1D",
        "filters": 32,
        "kernel_size": 3,
        "activation": "relu"
      }
    ],
    "lstm_layers": [
      {
        "type": "LSTM",
        "units": 64,
        "return_sequences": true
      },
      {
        "type": "LSTM",
        "units": 32,
        "return_sequences": true
      },
      {
        "type": "LSTM",
        "units": 16,
        "return_sequences": false
      }
    ],
    "dense_layers": [
      {
        "type": "Dense",
        "units": 1,
        "activation": "sigmoid"
      }
    ]
  },
  "training_settings": {
    "optimizer": "adam",
    "loss": "binary_crossentropy",
    "metrics": [
      "accuracy"
    ],
    "epochs": 100,
    "batch_size": 128,
    "validation_split": 0.2,
    "early_stopping": true,
    "patience": 10
  },
  "sequence_length": 3,
  "prediction_steps": 2,
  "retraining_settings": {
    "retrain_with_predictions": true,
    "prediction_threshold": 0.5,
    "max_wrong_predictions": 1000
  }
}